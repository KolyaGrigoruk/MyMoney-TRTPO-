<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usr.mymoney.Activity.EditingOneObjActivity"
    tools:showIn="@layout/activity_editing_one_obj">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_obj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статья: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner_name_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_amount_obj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумма:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_amount_obj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_update_obj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/selected_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Date"
            android:textColor="#e4ebf2"
            android:textSize="22dp" />

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </CalendarView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
